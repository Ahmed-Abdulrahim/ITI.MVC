@model List<UserInRoleViewModel>
@{
    ViewData["Title"] = "AddOrRemoveUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var RoleId = ViewData["Role"];
}

<h1>AddOrRemoveUser</h1>
 <form class="form-group" asp-route-id="@RoleId" asp-action="AddOrRemoveUser">
@for (int i = 0; i < Model.Count; i++)
{
   
      <input asp-for="@Model[i].IsSelected" />
      <label asp-for="@Model[i].IsSelected">@Model[i].Name</label>
        <input asp-for="@Model[i].Id" type="hidden"/>
        <input asp-for="@Model[i].Name" type="hidden" />
      
 
}  
<input type="submit" value="Update" />
</form>   